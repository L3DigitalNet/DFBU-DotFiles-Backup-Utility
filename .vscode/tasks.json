{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "DFBU/tests/",
                "-v"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "pytest",
            "args": [
                "DFBU/tests/",
                "--cov=DFBU",
                "--cov-report=html",
                "--cov-report=term-missing"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Unit Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "DFBU/tests/",
                "-v",
                "-m",
                "unit"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Integration Tests",
            "type": "shell",
            "command": "pytest",
            "args": [
                "DFBU/tests/",
                "-v",
                "-m",
                "integration"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "MyPy Type Check",
            "type": "shell",
            "command": "mypy",
            "args": [
                "DFBU/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): (error|warning|note): (.+) \\[(.+)\\]$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5,
                    "code": 6
                }
            }
        },
        {
            "label": "Format Code (Ruff)",
            "type": "shell",
            "command": "ruff",
            "args": [
                "format",
                "DFBU/"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Lint Code (Ruff)",
            "type": "shell",
            "command": "ruff",
            "args": [
                "check",
                "DFBU/"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): ([A-Z0-9]+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run DFBU GUI",
            "type": "shell",
            "command": "python",
            "args": [
                "DFBU/dfbu_gui.py"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Cache Files",
            "type": "shell",
            "command": "find . -type d -name '__pycache__' -o -name '.pytest_cache' -o -name '.mypy_cache' -o -name '.ruff_cache' | xargs rm -rf",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies (UV)",
            "type": "shell",
            "command": "uv",
            "args": [
                "pip",
                "install",
                "-r",
                "DFBU/requirements.txt"
            ],
            "group": "none",
            "problemMatcher": []
        }
    ]
}
