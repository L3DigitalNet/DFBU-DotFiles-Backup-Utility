{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DFBU GUI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/DFBU/dfbu_gui.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/DFBU"
            }
        },
        {
            "name": "Pytest: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "DFBU/tests/",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Unit Tests Only",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "DFBU/tests/",
                "-v",
                "-m",
                "unit"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Pytest: Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "DFBU/tests/",
                "-v",
                "-m",
                "integration"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
